{
    "version": 2,
    "functions": {
        "api/index.php": { 
            "runtime": "vercel-php@0.6.0" 
        }
    },
    "routes": [
        { 
            "src": "/images/(.*)", 
            "dest": "/public/images/" 
        },
        { 
            "src": "/storage/(.*)", 
            "dest": "/public/storage/" 
        },
        { 
            "src": "/user/(.*)", 
            "dest": "/public/user/" 
        },
        { 
            "src": "/(.*)", 
            "dest": "/api/index.php" 
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://pustakalaya.com.vercel.app",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "DB_CONNECTION": "mysql",
        "DB_HOST": "127.0.0.1",
        "DB_PORT": "3306",
        "DB_DATABASE": "library",
        "DB_USERNAME": "root"
    },
    "outputDirectory": "public"
}